{
  "name": "neurodecor-fullstack",
  "version": "1.0.0",
  "description": "NeuroDecor Full-Stack Application - Backend + Frontend on Railway",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd ../frontend && npm install --legacy-peer-deps && npm run build && echo 'Frontend build completed!'",
    "build:backend": "npm install",
    "build:full": "npm run build:backend && npm run build:frontend",
    "test": "echo \"Error: no test specified\" && exit 1",
    "logs": "echo 'Check Railway dashboard for logs'"
  },
  "dependencies": {
    "express": "^4.21.3",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.10.0",
    "dotenv": "^16.4.7",
    "firebase-admin": "^12.4.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "neurodecor",
    "ai",
    "interior-design",
    "fullstack",
    "railway"
  ],
  "author": "NeuroDecor Team",
  "license": "MIT"
}